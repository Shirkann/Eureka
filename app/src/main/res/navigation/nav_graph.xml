<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- ===== Login ===== -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.eureka.fragments.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/postListFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- ===== Register ===== -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.eureka.fragments.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_register_to_home"
            app:destination="@id/postListFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- ===== Home / Posts ===== -->
    <fragment
        android:id="@+id/postListFragment"
        android:name="com.example.eureka.features.post_list.PostListFragment"
        android:label="Home"
        tools:layout="@layout/fragment_post_list" />

    <!-- ===== Create Post ===== -->
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.example.eureka.features.create_post.CreatePostFragment"
        android:label="Create Post"
        tools:layout="@layout/fragment_createpost">

        <action
            android:id="@+id/action_createPost_to_home"
            app:destination="@id/postListFragment"
            app:popUpTo="@id/postListFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- ===== Profile ===== -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.eureka.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <!-- ===== Map ===== -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.eureka.fragments.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map" />

</navigation>
