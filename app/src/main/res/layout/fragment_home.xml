<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_panel"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/segmented"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/segmented_container"
            android:clipToPadding="false"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:checkedButton="@id/btn_lost">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_lost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="אבדות"
                android:textColor="@color/segmented_button_text"
                app:backgroundTint="@color/segmented_button_bg"
                app:cornerRadius="24dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"

                android:insetBottom="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_found"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="מציאות"
                android:textColor="@color/segmented_button_text"
                app:backgroundTint="@color/segmented_button_bg"
                app:cornerRadius="24dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                android:insetBottom="0dp" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EDEDFA">

    </FrameLayout>

</LinearLayout>
